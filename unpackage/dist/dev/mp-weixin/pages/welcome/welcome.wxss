.welcome {
  position: relative;
  height: 668px;
  width: 100%;
  box-sizing: border-box;
}
.welcome image {
  width: 100%;
  height: 100%;
}
.welcome .top {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 60px;
  background-color: #f8f8f8;
}
.welcome .logo {
  position: absolute;
  top: 0px;
  left: 0px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 75px;
  height: 85px;
  margin-top: 100px;
  margin-left: 50%;
  -webkit-transform: translate(-50%);
          transform: translate(-50%);
  box-sizing: border-box;
}
.welcome .logo image {
  width: 100%;
  height: 100%;
  border-radius: 20px;
}
.welcome .title {
  position: absolute;
  top: 180px;
  left: 154px;
  margin-top: 10px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  font-size: 16px;
  color: #101010;
  font-weight: 700;
}
.welcome .bottom {
  position: absolute;
  left: 0;
  bottom: 0;
  margin-bottom: 0;
  text-align: center;
  line-height: 40px;
  width: 100%;
  height: 40px;
  color: #373737;
  background-color: #f8f8f8;
  font-size: 16px;
